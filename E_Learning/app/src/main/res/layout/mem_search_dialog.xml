<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/nav_bg_top"
    android:orientation="horizontal" >

    
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:background="@drawable/common_btn_selector"
        android:scaleType="centerInside"
        android:src="@drawable/nav_btn_back" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:background="@drawable/list_bg_search_input_field"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/input_section"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/search_action"
            android:singleLine="true"
            android:textColor="#787979"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|right"
            android:scaleType="centerInside"
            android:src="@drawable/delete_btn_selector"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>